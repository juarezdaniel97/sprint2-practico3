<!-- Seccion de Listar -->
<div>
    <h2 class="fs-3 mb-3 text-center">LISTADO DE SUPERHÉROES</h2>

    <!-- Filtro por nombre -->
    <div class="mb-3">
        <input type="text" id="inputBuscar" class="form-control" placeholder="Buscar por nombre de superhéroe">
    </div>

    <!-- Tabla -->
    <div>
        <div class="table-responsive table-container">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Superheroe</th>
                        <th>Nombre Real</th>
                        <th>Edad</th>
                        <th>Planeta</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="tablaSuperHero">
                    <% superheroes.forEach(element=> { %>
                        <tr>
                            <td>
                                <%= element.nombreSuperheroe || "No especificado" %>
                            </td>
                            <td>
                                <%= element.nombreReal || "No especificado" %>
                            </td>
                            <td>
                                <%= element.edad %>
                            </td>
                            <td>
                                <%= element.planetaOrigen || "No especificado" %>
                            </td>

                            <td>
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                                    data-bs-target="#modalDetalles" data-id="<%= element._id %>"
                                    data-nombre=" <%= element.nombreSuperheroe || " No especificado" %>"
                                    data-poder="<%= element.poderes %>"
                                        data-aliado="<%= element.aliados%>"
                                            data-enemigo=" <%= element.enemigos %>"
                                                data-autor=" <%= element.autor %>"
                                                    data-fecha=" <%= element.createdAt %>">
                                                        Ver Más
                                </button>
                            </td>
                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="modalDetalles" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <!-- Encabezado -->
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="titoloModal">
                                            Datos
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <!-- Cuerpo -->
                                    <div class="modal-body">
                                        <p><strong>ID: </strong>
                                            <span id="modal-id"></span>
                                        </p>
                                        <p><strong>Nombre: </strong>
                                            <span id="modal-nombre"></span>
                                        </p>
                                        <p><strong>Poderes: </strong>
                                            <span id="modal-poder"></span>
                                        </p>
                                        <p><strong>Aliados: </strong>
                                            <span id="modal-aliado"></span>
                                        </p>
                                        <p><strong>Enemigos: </strong>
                                            <span id="modal-enemigo"></span>
                                        </p>
                                        <p><strong>Autor: </strong>
                                            <span id="modal-autor"></span>
                                        </p>
                                        <p><strong>Fecha: </strong>
                                            <span id="modal-fecha"></span>
                                        </p>
                                    </div>
                                    <!-- Pie de página -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="/js/filtrado.js"></script>
<script src="/js/modalListar.js"></script>