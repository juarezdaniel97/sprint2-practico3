<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head') %>

    <body class="bg-light">
        <div class="d-flex" style="height: 100vh;">
            <!-- Sidebar -->
            <%- include('partials/header') %>

                <!-- Contenido Principal -->
                <main class="flex-grow-1 p-4">
                    <div>
                        <h2 class="fs-3 mb-2 text-center">Agregar de Superh√©roes</h2>
                        <form id="formAgregar">

                            <div class="mb-1">
                                <label for="form-nombre" class="form-label">Nombre Superheroe</label>
                                <input type="text" class="form-control" id="form-nombre" name="nombreSuperheroe" placeholder="Ingresa tu nombre">
                            </div>
                
                            <div class="mb-1">
                                <label for="form-nombreReal" class="form-label">Nombre Real</label>
                                <input type="text" class="form-control" id="form-nombreReal" name="nombreReal" placeholder="Ingresa tu nombre">
                            </div>
                            
                            <div class="mb-1">
                                <label for="form-edad" class="form-label">Edad</label>
                                <input type="number" class="form-control" id="form-edad" name="edad">
                            </div>

                            <div class="mb-1">
                                <label for="form-planeta" class="form-label">Planeta</label>
                                <input type="text" class="form-control" id="form-planeta" name="planetaOrigen" placeholder="Ingresa el planeta">
                            </div>

                            <div class="mb-1">
                                <label for="form-debilidad" class="form-label">Debilidad</label>
                                <input type="text" class="form-control" id="form-debilidad" name="debilidad" placeholder="Ingresa la debilidad">
                            </div>

                            <div class="mb-1">
                                <label for="form-poderes" class="form-label">Poderes</label>
                                <textarea class="form-control" id="form-poderes" name="poderes" rows="1" placeholder="Escribe los poderes separados por coma. Ej: correr, saltar"></textarea>
                            </div>

                            <div class="mb-1">
                                <label for="form-aliados" class="form-label">Aliados</label>
                                <textarea class="form-control" id="form-aliados" name="aliados" rows="1" placeholder="Escribe los aliados separados por coma"></textarea>
                            </div>

                            <div class="mb-1">
                                <label for="form-enemigos" class="form-label">Enemigos</label>
                                <textarea class="form-control" id="form-enemigos" name="enemigos" rows="1" placeholder="Escribe los enemigos separados por coma"></textarea>
                            </div>

                            <button type="button" class="btn btn-secondary mb-1" >Cancelar</button>
                            <button type="submit" form="formAgregar" class="btn btn-primary mb-1">Guardar</button>
                        </form>
                    </div>
                </main>
        </div>
    </body>

    <script src="/js/addSuperhero.js"></script>
</html>